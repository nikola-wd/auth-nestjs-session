generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String  @unique
  username  String  @unique
  firstName String
  lastName  String
  hash      String
  hashRt    String?
  // TODO: Remove this. Here only for testing
  posts     Post[]

  @@map("users")
}

